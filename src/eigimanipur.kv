<MyRoot>:
    orientation: 'vertical'
    spacing: 20
    padding: [25,25,25,25]

    BoxLayout:
        size_hint_y: None
        height: 60

        Label:
            text: "Eigi Manipur"
            color: 0,0,0,1
            halign: "left"
            valign: "middle"
            font_size: 52



    Label:
        id: title
        font_name: "Meetei"
        font_size: 36
        text: "Need emergency?"
        color: 0,0,0,1
        halign: "center"
        text_size: self.size
        

    Button:
        id: btn
        size_hint: None,None
        size: 240,240
        pos_hint: {"center_x":0.5}
        font_name: "Meetei"
        font_size: 32
        text: "Emergency"
        background_normal: ""
        background_color: 1,0.35,0.35,1
        on_press: root.send_location(self)

    Label:
        id: random_la
        font_name: "Meetei"
        font_size: 18
        text: "-"
        color: 0,0,0,1
        halign: "center"
        text_size: self.size
    Button:
        text: "Switch Language"
        size_hint_y: None
        height: 60
        on_press: root.switch_lang()